    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.bodyFat.BodyFatActivity"
    android:orientation="vertical"
    android:background="@color/bgColor">

    <View
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:background="@color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/backIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@mipmap/registor_icon_back"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/rayblue"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:text="@string/body_fat"/>

        <ImageView
            android:id="@+id/userIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/userinfo"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_gray_stroke">

                    <RadioButton
                        android:id="@+id/lastSevenRb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last7days"
                        android:button="@android:color/transparent"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:checked="true"
                        android:background="@drawable/bg_radio_left"
                        android:textColor="@drawable/bg_text_body"
                        android:textSize="13sp"/>

                    <RadioButton
                        android:id="@+id/lastThirtyRb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last30days"
                        android:button="@android:color/transparent"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/bg_radio_right"
                        android:textColor="@drawable/bg_text_body"
                        android:textSize="13sp"/>

