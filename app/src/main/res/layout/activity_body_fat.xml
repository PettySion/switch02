                            android:layout_height="35dp"
                            android:textColor="@color/bodyBlue"
                            android:text="--"
                            android:textSize="18sp"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:gravity="center"/>

                    </LinearLayout>

