                        android:layout_gravity="center"
                        android:textColor="@color/rayblue"
                        android:textSize="18sp"
                        android:text="--"
                        android:layout_marginEnd="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View
