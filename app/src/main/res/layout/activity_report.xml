<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:id="@+id/reportLl">

    <include layout="@layout/title_report"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/reportTl"
        android:layout_width="@dimen/tab_weight"
        android:layout_height="30dp"
        android:background="#00000000"
        app:tabBackground="@android:color/transparent"
        app:tabTextAppearance="@style/CustomTabTextAppearanceStyle"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="@color/rayblue"
        app:tabMode="fixed"></com.google.android.material.tabs.TabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>


    <com.szip.jswitch.View.NoScrollViewPager
        android:id="@+id/reportVp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reportTl"
        android:background="#00000000"
        ></com.szip.jswitch.View.NoScrollViewPager>

</LinearLayout>