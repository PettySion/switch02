<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgColor"
        android:paddingTop="10dp">


        <ImageView
            android:id="@+id/backIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@mipmap/registor_icon_back"
            android:layout_marginStart="@dimen/item_margin_parallel"/>


        <ImageView
            android:id="@+id/rightIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/my_unit_icon_ok"
            android:layout_marginEnd="@dimen/item_margin_parallel"
            android:padding="5dp"/>



        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/rayblue"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            android:text="@string/unit"
            android:layout_marginStart="@dimen/item_margin_parallel"
            android:layout_marginTop="@dimen/title_margin_top"
            android:layout_marginBottom="@dimen/title_margin_bottom"
            android:layout_below="@+id/backIv"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:layout_below="@+id/titleTv"/>

    </RelativeLayout>

    <WebView
        android:id="@+id/contentWeb"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>